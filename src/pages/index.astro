---
import { SignIn } from "@clerk/astro/components";
import { SignedIn, SignedOut } from "@clerk/astro/components";
---

<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="theme-color" content="#1e88e5" />
    <title>ScarTech Solutions - Login</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family:
          -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        background: #ffffff;
        min-height: 100vh;
        min-height: -webkit-fill-available;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        padding-top: env(safe-area-inset-top, 20px);
        padding-bottom: env(safe-area-inset-bottom, 20px);
      }
      html {
        height: -webkit-fill-available;
      }
      .login-container {
        text-align: center;
        padding: 1.5rem;
        width: 100%;
        max-width: 480px;
      }
      .logo-container {
        margin-bottom: 0.5rem;
      }
      .logo-icon {
        width: 150px;
        height: auto;
        margin-bottom: 1rem;
        object-fit: contain;
      }

      /* Customização do Clerk SignIn */
      :global(.cl-rootBox) {
        width: 100%;
      }
      :global(.cl-card) {
        background: #ffffff !important;
        border: 1px solid #e0e0e0 !important;
        border-radius: 16px !important;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08) !important;
        padding: 1.5rem !important;
        min-width: auto !important;
        width: 100% !important;
        max-width: 400px !important;
      }
      :global(.cl-headerTitle),
      :global(.cl-headerSubtitle) {
        display: none !important;
      }
      :global(.cl-formFieldLabel) {
        color: #333333 !important;
        font-weight: 500 !important;
      }
      :global(.cl-formFieldInput) {
        background: #f8f9fa !important;
        border: 1px solid #e0e0e0 !important;
        border-radius: 10px !important;
        color: #333333 !important;
        padding: 1rem 1.25rem !important;
      }
      :global(.cl-formFieldInput:focus) {
        border-color: #1e88e5 !important;
        box-shadow: 0 0 0 3px rgba(30, 136, 229, 0.15) !important;
      }
      :global(.cl-formButtonPrimary) {
        background: linear-gradient(
          135deg,
          #1e88e5 0%,
          #1565c0 100%
        ) !important;
        border: none !important;
        border-radius: 10px !important;
        padding: 1rem !important;
        font-weight: 600 !important;
      }
      :global(.cl-formButtonPrimary:hover) {
        background: linear-gradient(
          135deg,
          #42a5f5 0%,
          #1e88e5 100%
        ) !important;
      }
      :global(.cl-footerActionLink) {
        color: #1e88e5 !important;
      }
      :global(.cl-footerActionText) {
        color: #666666 !important;
      }
      /* Esconder login social e campos de telefone */
      :global(.cl-socialButtons),
      :global(.cl-socialButtonsBlockButton),
      :global(.cl-socialButtonsProviderIcon),
      :global(.cl-dividerRow),
      :global(.cl-formFieldRow__phoneNumber),
      :global([data-localization-key*="phone"]),
      :global(.cl-formField__phoneNumber) {
        display: none !important;
      }

      .welcome-container {
        background: #ffffff;
        border: 1px solid #e0e0e0;
        border-radius: 16px;
        padding: 2rem;
        text-align: center;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
      }
      .welcome-text {
        color: #4caf50;
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
      }
      .btn-dashboard {
        display: inline-block;
        padding: 0.875rem 2rem;
        background: linear-gradient(135deg, #1e88e5 0%, #1565c0 100%);
        color: white;
        text-decoration: none;
        border-radius: 10px;
        font-weight: 600;
        transition: all 0.3s ease;
      }
      .btn-dashboard:hover {
        background: linear-gradient(135deg, #42a5f5 0%, #1e88e5 100%);
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(30, 136, 229, 0.3);
      }

      /* Responsivo Mobile */
      @media (max-width: 480px) {
        body {
          padding: 15px;
        }
        .login-container {
          padding: 1rem;
        }
        .logo-icon {
          width: 120px;
        }
        :global(.cl-card) {
          padding: 1.25rem !important;
          border-radius: 12px !important;
        }
        :global(.cl-formFieldInput) {
          padding: 0.875rem 1rem !important;
          font-size: 16px !important; /* Previne zoom no iOS */
        }
        :global(.cl-formButtonPrimary) {
          padding: 0.875rem !important;
          font-size: 16px !important;
        }
        .welcome-container {
          padding: 1.5rem;
        }
        .btn-dashboard {
          padding: 0.75rem 1.5rem;
          font-size: 15px;
          width: 100%;
        }
      }

      /* iPhone SE e dispositivos pequenos */
      @media (max-width: 375px) {
        .logo-icon {
          width: 100px;
        }
        :global(.cl-card) {
          padding: 1rem !important;
        }
      }

      /* Landscape mode */
      @media (max-height: 500px) and (orientation: landscape) {
        .logo-icon {
          width: 80px;
          margin-bottom: 0.5rem;
        }
        .login-container {
          padding: 0.5rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="login-container">
      <div class="logo-container">
        <img src="/logo.png" alt="ScarTech Solutions" class="logo-icon" />
      </div>

      <SignedOut>
        <SignIn routing="path" path="/" signUpUrl="/cadastro" />
      </SignedOut>

      <SignedIn>
        <div class="welcome-container">
          <p class="welcome-text">✓ Você está conectado!</p>
          <a href="/dashboard" class="btn-dashboard">Acessar Dashboard</a>
        </div>
      </SignedIn>
    </div>
  </body>
</html>
