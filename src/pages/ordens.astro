      async function initClerkAndLoadData() {
        let clerkUserId = null;
        if (typeof window.Clerk !== "undefined" && window.Clerk.user) {
          clerkUserId = window.Clerk.user.primaryEmailAddress?.emailAddress;
          if (!clerkUserId) {
            console.error("Email do Clerk n√£o dispon√≠vel");
            setTimeout(initClerkAndLoadData, 500);
            return;
          }
          await window.ScartechCloud.init(clerkUserId);
          await loadAllData();
        } else {
          setTimeout(initClerkAndLoadData, 500);
        }
      }

      async function loadAllData() {
        try {
          ordens = await window.ScartechCloud.getOrdens();
        } catch (error) {
          console.error("Erro ao carregar ordens da nuvem:", error);
          ordens = JSON.parse(localStorage.getItem("scartech_ordens") || "[]");
        }
        renderOrdens();
      }

      // Inicializar Clerk + Sync
      initClerkAndLoadData();
