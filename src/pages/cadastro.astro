---
import { SignUp } from "@clerk/astro/components";
---

<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no"
    />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta
      name="apple-mobile-web-app-status-bar-style"
      content="black-translucent"
    />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="theme-color" content="#1e88e5" />
    <title>ScarTech Solutions - Criar Conta</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family:
          -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        background: #ffffff;
        min-height: 100vh;
        min-height: -webkit-fill-available;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
        padding-top: env(safe-area-inset-top, 20px);
        padding-bottom: env(safe-area-inset-bottom, 20px);
      }
      html {
        height: -webkit-fill-available;
      }
      .signup-container {
        text-align: center;
        padding: 1.5rem;
        width: 100%;
        max-width: 480px;
      }
      .logo-container {
        margin-bottom: 0.5rem;
      }
      .logo-icon {
        width: 150px;
        height: auto;
        margin-bottom: 1rem;
        object-fit: contain;
      }

      /* Customização do Clerk SignUp */
      :global(.cl-rootBox) {
        width: 100%;
      }
      :global(.cl-card) {
        background: #ffffff !important;
        border: 1px solid #e0e0e0 !important;
        border-radius: 16px !important;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08) !important;
        padding: 1.5rem !important;
        min-width: auto !important;
        width: 100% !important;
        max-width: 400px !important;
      }
      :global(.cl-headerTitle),
      :global(.cl-headerSubtitle) {
        display: none !important;
      }
      :global(.cl-formFieldLabel) {
        color: #333333 !important;
        font-weight: 500 !important;
      }
      :global(.cl-formFieldInput) {
        background: #f8f9fa !important;
        border: 1px solid #e0e0e0 !important;
        border-radius: 10px !important;
        color: #333333 !important;
        padding: 1rem 1.25rem !important;
      }
      :global(.cl-formFieldInput:focus) {
        border-color: #1e88e5 !important;
        box-shadow: 0 0 0 3px rgba(30, 136, 229, 0.15) !important;
      }
      :global(.cl-formButtonPrimary) {
        background: linear-gradient(
          135deg,
          #1e88e5 0%,
          #1565c0 100%
        ) !important;
        border: none !important;
        border-radius: 10px !important;
        padding: 1rem !important;
        font-weight: 600 !important;
      }
      :global(.cl-formButtonPrimary:hover) {
        background: linear-gradient(
          135deg,
          #42a5f5 0%,
          #1e88e5 100%
        ) !important;
      }
      :global(.cl-footerActionLink) {
        color: #1e88e5 !important;
      }
      :global(.cl-footerActionText) {
        color: #666666 !important;
      }
      /* Esconder login social e campos de telefone */
      :global(.cl-socialButtons),
      :global(.cl-socialButtonsBlockButton),
      :global(.cl-dividerRow),
      :global(.cl-formFieldRow__phoneNumber),
      :global([data-localization-key*="phone"]),
      :global(.cl-formField__phoneNumber) {
        display: none !important;
      }

      /* Responsivo Mobile */
      @media (max-width: 480px) {
        body {
          padding: 15px;
        }
        .signup-container {
          padding: 1rem;
        }
        .logo-icon {
          width: 120px;
        }
        :global(.cl-card) {
          padding: 1.25rem !important;
          border-radius: 12px !important;
        }
        :global(.cl-formFieldInput) {
          padding: 0.875rem 1rem !important;
          font-size: 16px !important;
        }
        :global(.cl-formButtonPrimary) {
          padding: 0.875rem !important;
          font-size: 16px !important;
        }
      }

      @media (max-width: 375px) {
        .logo-icon {
          width: 100px;
        }
        :global(.cl-card) {
          padding: 1rem !important;
        }
      }

      @media (max-height: 500px) and (orientation: landscape) {
        .logo-icon {
          width: 80px;
          margin-bottom: 0.5rem;
        }
        .signup-container {
          padding: 0.5rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="signup-container">
      <div class="logo-container">
        <img src="/logo.png" alt="ScarTech Solutions" class="logo-icon" />
      </div>

      <SignUp routing="path" path="/cadastro" signInUrl="/" />
    </div>
  </body>
</html>
