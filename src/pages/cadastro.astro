---
import { SignUp } from "@clerk/astro/components";
---

<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ScarTech Solutions - Criar Conta</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family:
          -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        background: #ffffff;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .signup-container {
        text-align: center;
        padding: 2rem;
        width: 100%;
        max-width: 480px;
      }
      .logo-container {
        margin-bottom: 0.5rem;
      }
      .logo-icon {
        width: 200px;
        height: auto;
        margin-bottom: 1rem;
        object-fit: contain;
      }

      /* Customização do Clerk SignUp */
      :global(.cl-rootBox) {
        width: 100%;
      }
      :global(.cl-card) {
        background: #ffffff !important;
        border: 1px solid #e0e0e0 !important;
        border-radius: 16px !important;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08) !important;
        padding: 2rem !important;
        min-width: 400px !important;
      }
      :global(.cl-headerTitle),
      :global(.cl-headerSubtitle) {
        display: none !important;
      }
      :global(.cl-formFieldLabel) {
        color: #333333 !important;
        font-weight: 500 !important;
      }
      :global(.cl-formFieldInput) {
        background: #f8f9fa !important;
        border: 1px solid #e0e0e0 !important;
        border-radius: 10px !important;
        color: #333333 !important;
        padding: 1rem 1.25rem !important;
      }
      :global(.cl-formFieldInput:focus) {
        border-color: #1e88e5 !important;
        box-shadow: 0 0 0 3px rgba(30, 136, 229, 0.15) !important;
      }
      :global(.cl-formButtonPrimary) {
        background: linear-gradient(
          135deg,
          #1e88e5 0%,
          #1565c0 100%
        ) !important;
        border: none !important;
        border-radius: 10px !important;
        padding: 1rem !important;
        font-weight: 600 !important;
      }
      :global(.cl-formButtonPrimary:hover) {
        background: linear-gradient(
          135deg,
          #42a5f5 0%,
          #1e88e5 100%
        ) !important;
      }
      :global(.cl-footerActionLink) {
        color: #1e88e5 !important;
      }
      :global(.cl-footerActionText) {
        color: #666666 !important;
      }
      /* Esconder login social e campos de telefone */
      :global(.cl-socialButtons),
      :global(.cl-socialButtonsBlockButton),
      :global(.cl-dividerRow),
      :global(.cl-formFieldRow__phoneNumber),
      :global([data-localization-key*="phone"]),
      :global(.cl-formField__phoneNumber) {
        display: none !important;
      }
    </style>
  </head>
  <body>
    <div class="signup-container">
      <div class="logo-container">
        <img src="/logo.png" alt="ScarTech Solutions" class="logo-icon" />
      </div>

      <SignUp routing="path" path="/cadastro" signInUrl="/" />
    </div>
  </body>
</html>
